#menu
  .wrapper
    .left
      = link_to 'Forge', root_path
      \&gt;
    .right
      = link_to 'Projects', projects_path
      |
      = link_to 'Create', new_project_path
      |
      - allow :user => :is_site_admin? do
        = link_to 'Admin-Forge', admin_path
        |
      = link_to 'Search', projects_path(:show_search_form => true)
      
#overview
  .wrapper
    .message
      %h1
        FUSE Forge
      FUSE Forge is the developer center for hosting extensions to
      = link_to 'FUSE', 'http://fusesource.com'
      ,
      the leading open source ESB and integration platform.
      
#project-section
  .wrapper
    - unless @my_projects.empty?
      .message
        %h2
          My Projects
      .list
        - @my_projects.each do |project|
          .project
            .logo
              = link_to(image_tag(project.image.url(:thumb)), project_path(project))
            .details
              .category
                = h(project.category.name)
              %h1
                = link_to h(project.name), project_path(project)
              %p
                = sanitize project.description
              = link_to(image_tag("more-about-this-project.jpg"), project_path(project))
    .message
      %h2
        Featured Projects
    .list
      - @featured_projects.each do |project|
        .project
          .logo
            = link_to(image_tag(project.image.url(:thumb)), project_path(project))
          .details
            .category
              = h(project.category.name)
            %h1
              = link_to h(project.name), project_path(project)
            %p
              = sanitize project.description
            = link_to(image_tag("more-about-this-project.jpg"), project_path(project))
