<div class="wrapper">
  <h1>Project Administration for <%= h @project.name -%></h1>
  <div class="one_column section">
    <div class="interior">
      <ul>
      	<li><%= link_to 'Edit', edit_project_path(@project) -%></li>
        <li><%= link_to "Admins", project_project_administrators_path(@project) -%></li>
        <li><%= link_to "Members", project_project_members_path(@project) -%></li>      	
        <% allow :exec => proc { @current_user.is_company_employee? } do %>
        	<li><%= link_to 'Admin Groups', project_project_admin_groups_path(:project_id => @project) -%></li>
        	<li><%= link_to 'Member Groups', project_project_member_groups_path(:project_id => @project) -%></li>
      	<% end %>
      	<li><%= link_to 'Downloads', project_downloads_path(@project) -%></li>
      	<li><%= link_to 'News Items', project_project_news_items_path(:project_id => @project, :from_project_admin => true) -%></li>
        <% if @project.is_active? %>
          <% allow :user => :is_site_admin? do %>
            <li><%= link_to 'Inactivate', @project, :confirm => 'Are you sure?', :method => :delete %></li>
          <% end %>
        <% end %>
      </ul>	
    </div>
  </div>
  <div class="bottom_links">
    <%= link_to 'Back to Project Home', project_path(@project) %>
  </div>
</div>