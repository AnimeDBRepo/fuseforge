.wrapper
  %h1
    Listing News Items for
    = h @project.name
  .one_column.section
    .interior
      %table
        %tr
          %th
            Title
          %th
            Created by
          %th
            Updated by
        - @project_news_items.each do |project_news_item|
        %tr
          %td
            = h project_news_item.title
          %td
            = h project_news_item.created_by.full_name
          %td
            = h project_news_item.updated_by.full_name
          %td
            = link_to 'Show', project_project_news_item_path(:project_id => @project, :id => project_news_item)
          - allow :exec => proc { @current_user.is_project_administrator_for?(@project) } do
          %td
            = link_to 'Edit', edit_project_project_news_item_path(:project_id => @project, :id => project_news_item)
          %td
            = link_to 'Destroy', project_project_news_item_path(:project_id => @project, :id => project_news_item),  :confirm => 'Are you sure?', :method => :delete
          - end
        - end
  .bottom_links
    - allow :exec => proc { @current_user.is_project_administrator_for?(@project) } do
    = link_to 'New Project News Item', new_project_project_news_item_path(:project_id => @project)
    |
    - end
    = link_to 'Back to Project', project_path(@project)
    |
    - allow :exec => proc { @current_user.is_project_administrator_for?(@project) } do
    = link_to 'Back to Project Administration', project_administration_path(@project)
    - end
