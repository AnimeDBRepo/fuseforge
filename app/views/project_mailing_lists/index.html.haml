#menu
  .wrapper
    .left
      = link_to 'Forge', root_path
      >
      = link_to 'Projects', projects_path
      >
      = link_to @project.name, @project
      >
      = link_to 'Admin', project_administration_path(@project)
      >
      = link_to 'Mailing Lists', project_mailing_lists_path(:project_id => @project)
      
    .right
      - allow :user => :is_site_admin? do
        = link_to 'Admin-Forge', admin_path
        |
      = link_to 'Search', projects_path(:show_search_form => true)

#overview
  .wrapper
    .message
      %h2&= "Mailing Lists for #{h @project.name}"
      
#section 
  .wrapper
    %table
      %tr
        %th List Name
        %th Address
        %th Internal
      - @project_mailing_lists.each do |project_mailing_list|
        %tr
          %td&= h project_mailing_list.name
          %td&= h project_mailing_list.post_address
          %td&= h project_mailing_list.use_internal?
          %td
            = link_to 'Show', project_mailing_list_path(:project_id => @project, :id => project_mailing_list)
          - allow :exec => proc { @current_user.is_project_administrator_for?(@project) } do
            %td
              = link_to 'Edit', edit_project_mailing_list_path(:project_id => @project, :id => project_mailing_list)
          - allow :exec => proc { @current_user.is_site_admin? } do
            %td
              = link_to 'Remove', project_mailing_list_path(:project_id => @project, :id => project_mailing_list),  :confirm => 'Are you sure?', :method => :delete
                  
    .bottom_links
      - allow :exec => proc { @current_user.is_site_admin? } do
        = link_to 'New Mailing List', new_project_mailing_list_path(:project_id => @project)
