<div class="wrapper">
  <div class="one_column section">
    <div class="interior">
      <h2>Add Member to <%= h @project.name -%></h2>
      <% form_tag( project_project_members_path(@project), :method => :post) do %>
        <p>
          <label>User Login</label><br />
          <%= text_field_tag 'login', @login %>
        </p>
        <p>
          <%= submit_tag "Add" %>
        </p>
      <% end %>
    </div>
  </div>
  <div class="bottom_links">
    <%= link_to 'Back', project_project_members_path(:project_id => @project) %>
  </div>
</div>