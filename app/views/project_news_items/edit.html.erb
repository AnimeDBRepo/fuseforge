<div class="wrapper">
  <div class="section">
    <h2>Editing News Item for <%= h @project.name -%></h2>
    <% form_for( [@project, @project_news_item] ) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :contents %><br />
        <%= f.text_area :contents %>
      </p>
      <p>
        <%= f.submit "Update" %>
      </p>
    <% end %>
  </div>
  <p>
    <%= link_to 'Show', project_project_news_item_path(:project_id => @project, :id => @project_news_item) %> |
    <%= link_to 'Back', project_project_news_items_path(:project_id => @project) %>
  </p>
</div>