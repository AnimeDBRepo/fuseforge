<div class="wrapper">
  <h1>Listing Read Only Groups of <%= @project.name -%></h1>
  <div class="one_column section">
    <div class="interior">
      <table>
        <tr>
          <th>Name</th>
        </tr>

      <% @project_readonly_groups.each do |group| %>
        <tr>
          <td>
            <%= h(group.name) -%>
          </td>
          <% allow :exec => proc { @current_user.is_project_administrator_for?(@project) } do %>
          <td>
            <%= link_to 'Remove crowd group from project', project_project_readonly_group_path(@project, group), 
             :confirm => 'Are you sure?', :method => :delete %>
          </td>
          <% end %>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
  <div class="bottom_links">
    <% allow :exec => proc { @current_user.is_company_employee? and @current_user.is_project_administrator_for?(@project) } do %>
    <%= link_to 'Add crowd group', new_project_project_readonly_group_path(@project) -%> |
    <% end %>
    <% allow :exec => proc { @current_user.is_project_administrator_for?(@project) } do %>
    <%= link_to 'Back to Project Administration', project_administration_path(@project) %>
    <% end %>
  </div>
</div>