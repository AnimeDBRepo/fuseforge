<div class="wrapper">
  <h1>Add Crowd Read Only Group to <%= h @project.name -%></h1>
  <% form_for( [@project, @project_readonly_group] ) do |f| %>
    <%= f.error_messages %>
    <div class="one_column section">
      <div class="interior">
        <p>
          <%= f.label :name %><br />
          <%= f.select :name, options_for_select, { :prompt => true } %>
        </p>
      </div>
    </div>    
    <div class="form_button">
      <%= f.submit "Add" %>
    </div>
  <% end %>
  <div class="bottom_links">
    <%= link_to 'Back', project_project_readonly_groups_path(:project_id => @project) %>
  </div>
</div>