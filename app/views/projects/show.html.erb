<div class="wrapper">
  <h1>
    <%= @project.name -%>
	  <% if @project.is_private? %>
	  <small>*** Private ***</small>
	  <% end %>
  </h1>
  <div class="one_column section">
    <div class="interior" style="min-height: 100px;">
      <div id="project_picture">
  	    <%= image_tag @project.image.url(:medium) %>
      </div>
    	<div id="project_menu">
        <%= link_to("Website", @project.external_website) unless @project.external_website.blank? -%>
        <% if logged_in? %>
        | <%= link_to "Admins", project_project_administrators_path(@project) -%>
        | <%= link_to "Members", project_project_members_path(@project) -%>
        <% end %>
        <% if @project.repository.is_active? %>
        | <%= link_to("Repository", @project.repository.url) -%>
        <% end %>
        <% if @project.web_dav_location.is_active? %>
        | <%= link_to("Files", @project.web_dav_location.files_url)  -%>
        <% end %>
        <% if @project.issue_tracker.is_active? %>
        | <%= link_to("Issue Tracker", @project.issue_tracker.url) -%>
        <% end %>
        <%if @project.forum.is_active?%>
        | <%= link_to("Forum", @project.forum.url) -%>
        <% end %>
        <%if @project.wiki.is_active? %>
        | <%= link_to("Wiki", @project.wiki.url) -%>
        <% end %>
        <% allow :exec => proc { @current_user.is_project_administrator_for?(@project) } do %>
   	    | <%= link_to 'Administration', project_administration_path(@project) %>
   	    <% end %>
      </div>
      <div id="project_attributes">
      	<strong>Status:</strong> <%= h @project.status.name -%>
      	<strong>Maturity:</strong> <%= h @project.maturity.name -%>
      	<strong>Category:</strong> <%= h @project.category.name -%>
      	<% unless @project.license.blank? %>
      	<strong>License:</strong>  
      	<% if @project.license == ProjectLicense.other %>
      	<%= link_to(h(@project.license.name), @project.other_license_url, :popup => true) -%>
      	<% else %>    
      	<%= link_to(h(@project.license.name), @project.license.url, :popup => true) -%>
      	<% end %>
        <% end %>
      </div>
    </div>
    <div style="clear:both;"></div>
	</div>
</div>	
<div style="clear:both;"></div>
<div class="wrapper">

	<div class="two_column section">
	  <div class="interior">
      <h2>Description</h2>
      <p><%= sanitize @project.description %></p>
	  </div>
  </div>

	<div class="two_column section">
	  <div class="interior">
      <h2>Downloads</h2>
	    <% @project.downloads.each do |download| %>
  	    <% if download.track? %>  
          <p>
            <% if logged_in? %>
              <%= link_to h(download.description), project_download_requests_path(:project_id => @project, 
                   :desc => download.description, :url => download.url), :method => :post -%>
            <% else %>
              <%= h(download.description) -%> <strong>(Login to access this download)</strong>       
            <% end %>       
          </p>
        <% else %>
          <p>
          <%= link_to h(download.description), download.url -%>
          </p>
        <% end %>  
      <% end %>
    </div>    
	</div>

  <%= render :partial => 'tags' %>

	<div class="two_column section">
	  <div class="interior">
      <h2>Activity</h2>
      <p><strong>Downloads:</strong> <%= @project.download_requests.size -%></p>
      <p><strong>Commits:</strong> <%= @project.repository.commits -%></p>
      <p><strong>Last Commit At:</strong> <%= @project.repository.last_commit_at -%></p>
	  </div>
	</div>  

  <div class="two_column section">
    <div class="interior">
      <h2>Recent News</h2>
      <ul>
	    <% @project.news_items.recent.each do |i| %>
        <li><%= link_to truncate(h(i.title), 55), project_project_news_item_path(:project_id => @project, :id => i) -%></li>
      <% end %>
      </ul>
    </div>
  </div>  

