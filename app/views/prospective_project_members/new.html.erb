<h1>Request to Join <%= @project.name -%></h1>

<% form_for([@project, @prospective_project_member]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit "Request" %>
  </p>
<% end %>

<%= link_to 'Back', project_path(@project) %>
