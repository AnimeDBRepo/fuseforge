<h1>Revision <%= @wiki_page_version.version -%> of <%= h @project.name -%>: <%= h @wiki_page.slug %></h1>

<i>
  Added by <%= @wiki_page_version.created_by.full_name -%>, last edited by 
   <%= @wiki_page_version.updated_by.full_name -%> on <%= @wiki_page_version.updated_at -%>
</i>

<p>
  <%= sanitize WikiPage.html_body(@wiki_page_version) %>
</p>

<%= link_to 'Restore', project_wiki_page_wiki_page_version_path(:project_id => @project, :wiki_page_id => @wiki_page,
     :id => @wiki_page_version.version), :method => :put, :confirm => 'Are you sure?' %> |
<%= link_to 'Back to Revisions', project_wiki_page_wiki_page_versions_path(:project_id => @project, :wiki_page_id => @wiki_page) %> |
<%= link_to 'Back to Wiki Page', project_wiki_page_path(:project_id => @project, :id => @wiki_page) %> |
<%= link_to 'Project Wiki Pages', project_wiki_pages_path(@project) %>
