<div id="tag-cloud">
  <h3>Tag Cloud</h3>
  <% if @tags.empty? -%>
  <p>No tags :/</p>
  <% else -%>
    <% tag_cloud(@tags, @levels) do |tag, level| -%>
      <%= link_to tag.name, project_wiki_pages_path(:project_id => @project, :tag => tag.name), :class => level -%>
    <% end -%>
  <% end -%>
</div>