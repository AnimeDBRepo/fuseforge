<div id="wiki-page-tags">
  <h3>Tags</h3>

  <% @wiki_page.tags.each do |tag| %>
  <%= link_to tag.name, project_wiki_pages_path(:project_id => @project, :tag => tag.name) -%>
  <% end %>

  <% allow :exec => proc { @current_user.is_project_member_for?(@project) } do %>
  <% form_remote_tag :url => project_wiki_page_wiki_page_tags_path(:project_id => @project, :wiki_page_id => @wiki_page) do %>
    <%= text_field_tag :tag, nil, :size => 15 %>
    <%= submit_tag 'Add' %>
  <% end %>
  <% end %>
</div>