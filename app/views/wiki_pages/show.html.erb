<h1><%= h @project.name -%>: <%= h @wiki_page.slug %></h1>

<i>
  Added by <%= @wiki_page.created_by.full_name -%>, last edited by <%= @wiki_page.updated_by.full_name -%> on <%= @wiki_page.updated_at -%>
</i>

<%= render :partial => 'tags' %>

<p>
  <%= sanitize @wiki_page.html_body %>
</p>

<% allow :exec => proc { @current_user.is_project_member_for?(@project) } do %>
<%= link_to 'Edit', edit_project_wiki_page_path(:project_id => @project, :id => @wiki_page) -%> |
<%= link_to 'Attachments', project_wiki_page_wiki_page_attachments_path(:project_id => @project, :wiki_page_id => @wiki_page) -%> |
<%= link_to 'History', project_wiki_page_wiki_page_versions_path(:project_id => @project, :wiki_page_id => @wiki_page) -%> |
<% end %>
<%= link_to 'Project Wiki Pages', project_wiki_pages_path(@project) %>
